    "mainScript": "src/assets/js/mirage-script.js",
    "dashboard": "src/index.html",
    "componentStructure": {
      "pattern": "src/components/[component-name]/",
      "requiredFiles": [
        "[component-name].css",
        "[component-name].js", 
        "[component-name]-docs.md",
        "[component-name]-demo.html"
      ]
    }
