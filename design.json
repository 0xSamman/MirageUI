  "designPrinciples": {
    "rtlFirst": {
      "description": "All components designed with right-to-left layout as primary consideration",
      "implementation": "Direction RTL, text-align right, icon positioning"
    },
    "persianTypography": {
      "description": "YekanBakh font optimized for Persian script",
      "features": ["proper-fallbacks", "line-height-1.75", "character-spacing"]
    },
    "glassMorphism": {
      "description": "Modern backdrop blur effects and transparent backgrounds",
      "implementation": "backdrop-filter: blur(16px), transparent backgrounds"
    },
    "goldenRatioSpacing": {
      "description": "Mathematical spacing system for visual harmony",
      "ratio": "1.618",
      "application": "margins, paddings, component spacing"
    },
    "semanticColors": {
