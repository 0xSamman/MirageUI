    "specifications": {
      "button": {
        "name": "Button System",
        "status": "completed",
        "location": "src/components/button/",
        "cssClass": "mir-btn",
        "variants": [
          "primary",
          "secondary", 
          "ghost",
          "outline",
          "success",
          "warning",
